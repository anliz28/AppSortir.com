{% extends 'base.html.twig' %}

{% block title %}Connexion au compte{% endblock %}

{% block main %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
        <label for="inputEmailPseudo">Email ou Pseudo</label>
        <input type="text" value="{{ last_username }}" name="_username" id="inputEmailPseudo" class="form-control" required autofocus>
        <label for="inputPassword">Mot de passe:</label>
        <input type="password" name="_password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

        <div> <input type="checkbox" id="remember_me" name="_remember_me"/>
       <label for="remember_me">Se souvenir de moi</label></div>
    {#
    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
    See https://symfony.com/doc/current/security/remember_me.html

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
    </form>

{% endblock %}