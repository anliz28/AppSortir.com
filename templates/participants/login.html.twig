{% extends 'base.html.twig' %}

{% block title %}Connexion au compte{% endblock %}

{% block main %}

    <div class="formulaire">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h2 class="h3 mb-3 font-weight-normal">Connexion</h2>
            <div id="Formulaire" class="row m-0 justify-content-center">

                    <label for="inputEmailPseudo">Email ou Pseudo</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="inputEmailPseudo" class="form-control" required autofocus>
                    <label for="inputPassword">Mot de passe:</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">

                    <div> <input type="checkbox" id="remember_me" name="_remember_me"/>
                    <label for="remember_me">Se souvenir de moi</label></div>

             </div>
                 <span class="col-sm-6">
                     <button class="btn btn-info btn-block" type="submit"> Se connecter</button>
                 </span>
        </form>

{% endblock %}